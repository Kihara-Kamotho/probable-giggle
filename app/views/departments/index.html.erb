<h1 class="text-3xl font-bold flex justify-center mt-8">Departments</h1>

<div class="flex justify-center">
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
    <% @departments.each do |dept| %>
      <div class="bg-gray-100 rounded-lg p-4 m-4">
        <strong class="text-lg md:text-xl lg:text-2xl"><%= link_to dept.name, dept %></strong>
        <div class="mt-2 text-sm md:text-base lg:text-lg">
          <%= dept.motto %>
          <%= dept.mission %>
        </div>
      </div>
    <% end %>
  </div>
</div>






<%# new dpt link %>
<%= turbo_frame_tag Department.new %>

<div>
  <%= link_to 'new dpt', new_department_path, data: { turbo_frame: dom_id(Department.new) }, class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 p-2 m-4 rounded' %>
</div>
